#!/usr/bin/env ruby

require 'bitbroker'

def show_status(type)
  container = BitBroker::ProgressManager.send(type)
  files = container.select {|x| x.progress < 100}
  unless files.empty?
    puts "=== #{type} ==="
    files.each {|x| puts x}
  end
end

show_status(:uploading)
show_status(:downloading)
